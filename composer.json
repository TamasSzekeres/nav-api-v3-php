{
    "name": "light-side-software/nav-api-v3-php",
    "description": "Nav Online Számla V3 PHP-Kliens",
    "type": "library",
    "keywords": [
        "nav",
        "api",
        "client",
        "php"
    ],
    "require": {
        "php": "^8.1",
        "ext-dom": "*",
        "guzzlehttp/guzzle": "^7.3",
        "jms/serializer": "^3.14"
    },
    "require-dev": {
        "phpdocumentor/phpdocumentor": "^3.0",
        "phpunit/phpunit": "^9.0",
        "pestphp/pest": "^1.20"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "LightSideSoftware\\NavApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LightSideSoftware\\NavApi\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest"
    },
    "authors": [
        {
            "name": "Tamás Szekeres",
            "email": "szektam2@gmail.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "symfony/flex": true
        }
    }
}
